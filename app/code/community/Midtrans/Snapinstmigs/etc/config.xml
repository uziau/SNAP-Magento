<?xml version="1.0"?>
<config>
  <modules>
    <Midtrans_Snapinstmigs>
      <version>1.0.0</version>
    </Midtrans_Snapinstmigs>
  </modules>
  <global>
    <models>
      <snapinstmigs>
        <class>Midtrans_Snapinstmigs_Model</class>
      </snapinstmigs>
    </models>
    <helpers>
      <snapinstmigs>
        <class>Midtrans_Snapinstmigs_Helper</class>
      </snapinstmigs>
    </helpers>
    <blocks>
      <snapinstmigs>
        <class>Midtrans_Snapinstmigs_Block</class>
      </snapinstmigs>
    </blocks>
    <adminhtml>
      <layout>
        <updates>
          <snapinstmigs>
            <file>midtrans.xml</file>
          </snapinstmigs>
        </updates>
      </layout>
    </adminhtml>
  </global>
  <default>
    <payment>
      <snapinstmigs>
        <model>snapinstmigs/standard</model>
        <active>1</active>
        <order_status>pending</order_status>
        <title>Installment MIGS</title>
        <payment_action>sale</payment_action>
        <allowspecific>0</allowspecific>
        <sort_order>1</sort_order>
        <conversion_rate>10000</conversion_rate>
        <enable_3d_secure>true</enable_3d_secure>
        <environment>sandbox</environment>
      </snapinstmigs>
    </payment>
  </default>
  <frontend>
    <routers>
      <snapinstmigs>
        <use>standard</use>
        <args>
          <module>Midtrans_Snapinstmigs</module>
          <frontName>snapinstmigs</frontName>
        </args>
      </snapinstmigs>
    </routers>
  </frontend>
  <adminhtml>
    <layout>
      <updates>
        <midtrans_snapinstmigs>
          <file>midtrans.xml</file>
        </midtrans_snapinstmigs>
      </updates>
    </layout>
  </adminhtml>
</config>
